<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="visible"
    android:weightSum="1"
    app:layout_collapseMode="none"
    android:background="@drawable/fundo_padrao"
    android:baselineAligned="false">

    <EditText
        android:id="@+id/veiculos"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Veiculo"
        android:textSize="20sp"
        android:textColor="@color/colorFontLogin"
        android:textColorHint="@color/colorFontLogin"/>

    <ImageButton
        android:id="@+id/deletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_delete" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_add" />


</LinearLayout>