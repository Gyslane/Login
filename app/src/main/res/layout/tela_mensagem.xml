<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_padrao"
    tools:context="com.example.gyslane.login.TelaPlaca">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:text="MENSAGENS:"
            android:textAlignment="center"
            android:textColor="@color/colorFontLogin"
            android:textSize="32sp"/>

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="96dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/veiculos"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:ems="10"
                android:hint="Mensagem recebida aqui..."
                android:inputType="textPersonName"
                android:textColor="@color/colorFontLogin"
                android:textColorHint="@color/colorFontLogin"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal"
            android:layout_weight="0.51">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="144dp"
                android:layout_weight="1"
                android:text="ALERTA: APÓS RECEBIDA A MENSAGEM, NÃO SE DIRIGIR SOZINHO (A) AO VEÍCULO. ANTES DE CHEGAR NO VEICULO VERIFIQUE SE REALMENTE A MENSAGEM CONFERE. FIQUE ATENTO!!!"
                android:textStyle="bold"
                android:textColor="@color/colorFontLogin"
                android:background="#FF0000"
                android:textSize="18dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="369dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btVoltar"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.04"
            android:text="Voltar"
            android:background="@drawable/button_cadastrar" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
