<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gyslane.login.TelaAlteraDados"
    android:background="@drawable/fundo_padrao"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALTERAR DADOS:"
        android:textAlignment="center"
        android:textColor="@color/colorFontLogin"
        android:textSize="32sp"
        android:layout_weight="0.17" />

    <EditText
        android:id="@+id/nmalt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome Completo"
        android:digits="abcdefghijklmnopqrstuvxwyz"
        android:textColorHint="@color/colorFontLogin"
        android:textColor="@color/colorFontLogin"/>

    <EditText
        android:id="@+id/emailalt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:textColorHint="@color/colorFontLogin"
        android:textColor="@color/colorFontLogin"/>

    <EditText
        android:id="@+id/phonealt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Celular"
        android:inputType="phone"
        android:digits="0123456789"
        android:maxLength="9"
        android:textColor="@color/colorFontLogin"
        android:textColorHint="@color/colorFontLogin" />

    <EditText
        android:id="@+id/passwordalt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:textColorHint="@color/colorFontLogin"
        android:textColor="@color/colorFontLogin"/>

    <EditText
        android:id="@+id/confirmdalt"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirmação de Senha"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:textColorHint="@color/colorFontLogin"
        android:textColor="@color/colorFontLogin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"></LinearLayout>

    <Button
        android:id="@+id/alterar"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="clickCancelar"
        android:text="Alterar"
        android:background="@drawable/button_cadastrar"/>

    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_weight="0"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancelar"
        android:background="@drawable/button_cadastrar"/>

</LinearLayout>
