<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gyslane.login.TelaDigitar"
    android:background="@drawable/fundo_padrao">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/digitarPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite a Placa:"
            android:layout_weight="0.05"
            android:textSize="29sp"
            android:textColor="@color/colorFontLogin"/>

        <EditText
            android:id="@+id/informarPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:ems="10"
            android:hint="Digite aqui"
            android:inputType="textPersonName"
            android:textColor="@color/colorFontLogin"
            android:textColorHint="@color/colorFontLogin" />

        <Button
            android:id="@+id/btIncluir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="OK"
            android:onClick="placa"/>
            <!--
            android:onClick="enviarDadosTelaDados"/>-->

        <Button
            android:id="@+id/btCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="CANCELAR" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
