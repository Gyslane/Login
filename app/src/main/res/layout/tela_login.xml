<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    android:gravity="center"
    tools:context="com.example.gyslane.login.TelaLogin">

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="@color/colorFontLogin"
        android:textColorHint="@color/colorFontLogin"/>

    <EditText
        android:id="@+id/loginSenha"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:textColorHint="@color/colorFontLogin"
        android:textColor="@color/colorFontLogin"/>

    <Button
        android:id="@+id/btLogar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Logar"
        android:background="@drawable/botton_border"
        android:shadowColor="#00E676" />

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/txtCadastro"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#fff"
        android:text="NÃ£o tem uma conta? Crie uma!" />
</LinearLayout>
