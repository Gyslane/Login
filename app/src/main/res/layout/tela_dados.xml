<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gyslane.login.TelaDados"
    android:background="@drawable/fundo_padrao" >

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/placa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Placa:"
            android:textColor="@color/colorFontLogin" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O que deseja informar?"
            android:textAlignment="center"
            android:layout_weight="0.09"
            android:textSize="29sp"
            android:textColor="@color/colorFontLogin"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.06"
            android:text="Selecione"
            android:textColor="@color/colorFontLogin"
            android:background="@drawable/spinner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/btEnviar"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ENVIAR"
            android:background="@drawable/button_cadastrar" />

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_weight="0"/>

        <Button
            android:id="@+id/btCancelar"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CANCELAR"
            android:background="@drawable/button_cadastrar"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
