<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gyslane.login">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_messenger_drive"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_messenger_drive"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TelaAbertura"
            android:label="Messenger Driver">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TelaLogin"
            android:label="Login">
            <intent-filter>
                <action android:name="com.example.gyslane.login.TelaLogin" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TelaCadastro"
            android:label="Cadastro">
            <intent-filter>
                <action android:name="com.example.gyslane.login.TelaPrincipal" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TelaPrincipal"
            android:label="Principal">
            <intent-filter>
                <action android:name="com.example.gyslane.login.TelaPrincipal" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TelaDados" />
        <activity android:name=".TelaConfiguracao" />
        <activity android:name=".TelaAlteraDados" />
        <activity android:name=".TelaApagarConta" />
        <activity android:name=".TelaVeiculo1" />
        <activity android:name=".TelaPlaca" />
        <activity android:name=".TelaMensagem"></activity>
    </application>

</manifest>